package zlanusic.wtp.filecounter.dao;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.PrintWriter;
import java.io.IOException;

//this is a normal java class, not a servlet!
public class FileDataAccessObject {

	public int getCount() {
		
		int count = 0;
		
		FileReader fileReader = null;
		BufferedReader bufferedRedaer = null;
		PrintWriter writer = null;
		try {
			
			File f = new File("FileCounter.initial");
			if(f.exists()) {
				f.createNewFile();
				writer = new PrintWriter(new FileWriter(f));
				writer.println(0);
				}
			if (writer != null) {
				writer.close();
				}
			
			fileReader = new FileReader(f);
			bufferedRedaer = new BufferedReader(fileReader);
			String initial = bufferedRedaer.readLine();
			count = Integer.parseInt(initial);
			} catch (Exception ex) {
				// TODO: handle exception
				if (writer != null) {
					writer.close();
				}
			}
		if (bufferedRedaer != null) {
			try {
				bufferedRedaer.close();
			} catch (IOException e) {
				// TODO: handle exception
				e.printStackTrace();
			}
		}
		return count;
	}
	
	public void save(int count) throws Exception {
		FileWriter fileWriter = null;
		PrintWriter printWriter = null;
		fileWriter = new FileWriter("FileCounter.initial");
		printWriter.println(count);
		
		//close the file!!!
		if (printWriter != null) {
			printWriter.close();
		}
	}
}
